{{- if (eq .chezmoi.os "linux") -}}
#!/usr/bin/env bash

set -eufo pipefail


# Upgrade packages if automation.update is true
{{ if eq .automation.update true }}
if command -v dnf &>/dev/null; then
    sudo dnf upgrade -y
elif command -v apt-get &>/dev/null; then
    sudo apt-get update
    sudo apt-get upgrade -y
elif command -v zypper &>/dev/null; then
    sudo zypper refresh
    sudo zypper up -y
    sudo zypper dup -y
elif command -v pacman &>/dev/null; then
    sudo pacman -Syu --noconfirm
else
    echo "Unsupported package manager. Update the packages manually."
fi
{{- end }}


# Starship
sh -c "$(curl -fsSL https://starship.rs/install.sh | head -n -5)" -- -y -b "$HOME/.local/bin"

xdg-settings set default-web-browser firefox.desktop    

# HOW DARE YOU, HOW DARE YOU!
{{- if (eq .chezmoi.osRelease.id "opensuse-tumbleweed") }}
    xdg-settings set default-web-browser firefox.desktop
{{- end }}
sudo cp ~/.config/plasma-localerc /etc/locale.conf
sudo sed -i -e "1d" /etc/locale.conf

echo "A reboot would be a good idea"

{{- end -}}
